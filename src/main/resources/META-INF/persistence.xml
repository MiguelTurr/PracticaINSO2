<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <!-- Define Persistence Unit -->
  <persistence-unit name="VeterinariaPersistencia" transaction-type="JTA">
    <class>modelo.Productos</class>
    <class>modelo.Mascotas</class>
    <class>modelo.Citas</class>
    <class>modelo.Usuarios</class>
    <class>modelo.Roles</class>
    <class>modelo.Infofacturas</class>
    <class>modelo.Consultas</class>
    <class>modelo.Animales</class>
    <class>modelo.Facturas</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <jta-data-source>jdbc/practica</jta-data-source>
  </persistence-unit>
</persistence>

